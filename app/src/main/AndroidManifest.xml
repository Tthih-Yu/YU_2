<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YU"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- Splash Activity 作为启动页 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.YU.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.YU">
            <!-- 已移除启动器过滤器，现在由SplashActivity启动 -->
        </activity>
        
        <activity
            android:name=".electricity.ElectricityActivity"
            android:label="宿舍电费监控"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".electricity.SettingsActivity"
            android:label="设置"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".electricity.ElectricityActivity" />
            
        <activity
            android:name=".electricity.ElectricityHistoryActivity"
            android:label="电费历史"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".electricity.ElectricityActivity" />
            
        <activity
            android:name=".schedule.ScheduleActivity"
            android:label="课程表"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".campuscard.CampusCardActivity"
            android:label="校园卡"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".AboutActivity"
            android:label="关于"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".MainActivity" />
            
        <!-- 关于页面的子页面 -->
        <activity
            android:name=".about.CheckUpdateActivity"
            android:label="检查更新"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.EmailContactActivity"
            android:label="邮件联系"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.HelpUsActivity"
            android:label="帮助我们"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.OpenSourceLicenseActivity"
            android:label="开源许可"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.PrivacyPolicyActivity"
            android:label="隐私政策"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.QQGroupActivity"
            android:label="QQ群"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.TelegramGroupActivity"
            android:label="Telegram群组"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.TermsActivity"
            android:label="使用条款"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.TranslationHelpActivity"
            android:label="翻译帮助"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".AboutActivity" />
            
        <activity
            android:name=".about.DonateActivity"
            android:label="支持开发"
            android:theme="@style/Theme.YU"
            android:parentActivityName=".about.HelpUsActivity" />
            
        <!-- 电费小部件提供者 -->
        <receiver
            android:name=".electricity.ElectricityWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.tthih.yu.electricity.ACTION_REFRESH_WIDGET" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/electricity_widget_info" />
        </receiver>
        
        <!-- 小部件更新工作者 -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>
        
    </application>

</manifest>