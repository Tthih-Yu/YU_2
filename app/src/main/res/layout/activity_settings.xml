<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matcha_background"
    tools:context=".electricity.SettingsActivity">

    <!-- Use AppBarLayout for the header to work with CoordinatorLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <!-- iOS风格顶部导航栏 -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="返回"
                android:padding="16dp"
                android:src="@drawable/ic_back"
                app:tint="@color/matcha_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/matcha_text_primary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Change ScrollView to NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="88dp"> <!-- Add paddingBottom for FAB -->

            <!-- 账号设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/matcha_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号设置"
                        android:textColor="@color/matcha_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="会话ID (JSESSIONID)"
                        app:boxBackgroundColor="@color/matcha_card_background"
                        app:boxStrokeColor="@color/matcha_primary"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/matcha_text_secondary"
                        app:hintTextColor="@color/matcha_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_jsession_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/matcha_text_primary"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="需要从APP抓包获取，过期后需要重新设置/输入任意数字有惊喜"
                        android:textColor="@color/matcha_text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 宿舍设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/matcha_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宿舍设置"
                        android:textColor="@color/matcha_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="宿舍楼"
                        android:textColor="@color/matcha_text_secondary"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/building_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/spinner_background"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_selected_building"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="女05#楼"
                            android:textColor="@color/matcha_text_primary"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/matcha_text_secondary" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="房间号"
                        app:boxBackgroundColor="@color/matcha_card_background"
                        app:boxStrokeColor="@color/matcha_primary"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/matcha_text_secondary"
                        app:hintTextColor="@color/matcha_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_room_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/matcha_text_primary"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 刷新设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/matcha_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刷新设置"
                        android:textColor="@color/matcha_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="刷新间隔"
                        android:textColor="@color/matcha_text_secondary"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/seek_bar_refresh_interval"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="119"
                            android:progress="29"
                            android:progressTint="@color/matcha_primary"
                            android:thumbTint="@color/matcha_primary" />

                        <TextView
                            android:id="@+id/tv_refresh_interval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="30分钟"
                            android:textColor="@color/matcha_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="低余额警告阈值"
                        android:textColor="@color/matcha_text_secondary"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/seek_bar_low_balance_threshold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="20"
                            android:progressTint="@color/matcha_primary"
                            android:thumbTint="@color/matcha_primary" />

                        <TextView
                            android:id="@+id/tv_low_balance_threshold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="20.0元"
                            android:textColor="@color/matcha_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="自动定时查询电量"
                                android:textColor="@color/matcha_text_primary"
                                android:textSize="16sp" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_scheduled_refresh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/matcha_primary"
                                app:trackTint="@color/matcha_primary" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_scheduled_refresh_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="每天晚上23:50和早上0:0:1自动查询电量"
                            android:textColor="@color/matcha_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- New Data & Widget Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/matcha_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数据与小部件"
                        android:textColor="@color/matcha_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Clear History Row -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/btn_clear_history"
                            android:text="清除历史数据"
                            android:layout_marginEnd="16dp"
                            android:textColor="@color/matcha_text_primary"
                            android:textSize="16sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_clear_history"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:backgroundTint="@android:color/transparent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="清除"
                            android:textColor="@color/matcha_danger"
                            android:textSize="14sp"
                            app:cornerRadius="8dp"
                            app:rippleColor="@color/matcha_danger_light"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/matcha_divider"/>

                    <!-- Add Widget Row -->
                     <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                         <TextView
                             android:id="@+id/tv_add_widget_label"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentStart="true"
                             android:layout_alignParentTop="true"
                             android:layout_toStartOf="@id/btn_add_widget"
                             android:text="添加桌面小部件"
                             android:layout_marginEnd="16dp"
                             android:textColor="@color/matcha_text_primary"
                             android:textSize="16sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_widget"
                             style="@style/Widget.MaterialComponents.Button.TextButton"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentEnd="true"
                             android:layout_alignTop="@id/tv_add_widget_label"
                             android:backgroundTint="@android:color/transparent"
                             android:minWidth="0dp"
                             android:minHeight="0dp"
                             android:paddingStart="12dp"
                             android:paddingEnd="12dp"
                             android:paddingTop="8dp"
                             android:paddingBottom="8dp"
                            android:text="添加"
                            android:textColor="@color/matcha_primary"
                            android:textSize="14sp"
                            app:cornerRadius="8dp"
                            app:rippleColor="@color/matcha_primary_light"/>

                         <TextView
                             android:id="@+id/tv_add_widget_description"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_below="@id/tv_add_widget_label"
                             android:layout_marginTop="8dp"
                             android:layout_toStartOf="@id/btn_add_widget"
                             android:layout_marginEnd="16dp"
                             android:text="若自动添加失败请检查APP权限，或者长按桌面添加"
                             android:textColor="@color/matcha_text_secondary"
                             android:textSize="12sp" />
                     </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Add FloatingActionButton -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="保存设置"
        android:src="@drawable/ic_save"
        app:backgroundTint="@color/matcha_primary"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 