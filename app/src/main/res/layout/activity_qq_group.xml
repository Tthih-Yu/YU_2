<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8F6"
    tools:context=".about.QQGroupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:titleTextColor="#FF8C00" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_qq_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_info"
                            app:tint="#FF8C00"
                            android:padding="4dp"
                            android:background="#FFF0E0"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="QQ群信息" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="YU应用交流群"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="加入我们的QQ群，获取最新通知和帮助"
                        android:textColor="#424242"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="#F0F6F0"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="群号: "
                            android:textColor="#757575"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_qq_group_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2190638246"
                            android:textColor="#FF8C00"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_copy_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FF8C00"
                            android:text="复制群号"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:cornerRadius="20dp"
                            style="@style/Widget.MaterialComponents.Button" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_qq_qr_code"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="16dp"
                        android:background="#F5F5F5"
                        android:contentDescription="QQ群二维码"
                        android:padding="8dp"
                        android:src="@drawable/placeholder_qr" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_join_group"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:backgroundTint="#FF8C00"
                        android:text="一键加入群组"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="28dp"
                        app:rippleColor="#80FFFFFF"
                        app:icon="@drawable/ic_info"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@android:color/white"
                        android:stateListAnimator="@null"
                        app:elevation="0dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="温馨提示：请确保您已安装QQ应用，使用一键加入功能时需要打开QQ应用进行确认。"
                android:textColor="#4CAF50"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="YU校园助手 © 2023"
                android:textColor="#9E9E9E"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout> 