<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ios_card_background">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="选择宿舍楼"
        android:textColor="@color/matcha_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_title">

        <Button
            android:id="@+id/btn_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/matcha_primary"
            android:text="男生"
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="@color/white"
            app:cornerRadius="16dp" />

        <Button
            android:id="@+id/btn_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/matcha_very_light"
            android:text="女生"
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="@color/matcha_text_primary"
            app:cornerRadius="16dp"
            app:strokeColor="@color/matcha_light"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/btn_postgrad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/matcha_very_light"
            android:text="研究生"
            android:textSize="13sp"
            android:padding="9dp"
            android:textColor="@color/matcha_text_primary"
            app:cornerRadius="16dp"
            app:strokeColor="@color/matcha_light"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/btn_mengxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/matcha_very_light"
            android:text="梦溪"
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="@color/matcha_text_primary"
            app:cornerRadius="16dp"
            app:strokeColor="@color/matcha_light"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_buildings"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/matcha_light"
        android:scrollbarSize="4dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tab_container" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/matcha_very_light"
        android:text="取消"
        android:textColor="@color/matcha_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_buildings"
        app:rippleColor="@color/matcha_light"
        app:strokeColor="@color/matcha_light"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 